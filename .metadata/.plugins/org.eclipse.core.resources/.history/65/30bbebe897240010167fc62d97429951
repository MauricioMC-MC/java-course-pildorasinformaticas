import java.util.*;

public class ManipulacionCadenas {

	public static void main(String[] args)
	{
		// TODO Auto-generated method stub

		String name = "Jorge";
		int longi = name.length();
		char letter = name.charAt(longi-1);
		
		System.out.println("Mi nombre es " +name+ " y tiene " +longi+ " letras,");
		System.out.println("y la ultima letra de mi nombre es " +letter);
		
		Scanner entrada;
		
		entrada.close();

		
	}
	
}
